#!/usr/bin/env bash

if [ $# -eq 0 ]; then
    input=$(cat -)
else
    input="$*"
fi

fillFromToWith() {
    from="$1"
    to="$2"
    with="$3"
    for (( i=from; i<=$to; i++ )); do
        echo -n "$with"
    done
}

lines=$(echo "$input" | wc --lines)
columns=$(echo "$input" | wc --max-line-length)

echo -n "╭─"
fillFromToWith 1 "$columns" "─"
echo "─╮"

IFS=$'\n'
for line in $input; do
    echo -n "│ "
    echo -n "$line"
    fillFromToWith $(echo "$line" | wc --chars) "$columns" " "
    echo " │"
done

echo -n "╰─"
fillFromToWith 1 "$columns" "─"
echo "─╯"
