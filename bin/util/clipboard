#!/usr/bin/env bash

set -euo pipefail

clipboard() {
    xsel --clipboard "$@"
}

echo_help() {
    echo "Copy text to the clipboard."
    echo ""
    echo "Usage:"
    echo "    a) Copy to clipboard"
    echo "         • Pipe STDOUT to this script"
    echo "         • Provide text as argument"
    echo "    b) Get clipboard contents"
    echo "         • Run script directly (no args, no STDIN)"
}

if [[ "$#" -eq 1 && ("$1" == "--help" || "$1" == "-h") ]]; then
    echo_help
    exit 0
fi

if [[ "$#" -ne 0 ]]; then
    mode="copy_arguments"
elif [ -t 0 ]; then # STDIN not connected -> print clipboard contents
    mode="echo_contents"
else
    mode="copy_stdin"
fi

case "$mode" in
    echo_contents)
        clipboard -o
        ;;
    copy_stdin)
        cat - | tee >(clipboard -i > /dev/null)
        ;;
    copy_arguments)
        echo "$*" | tee >(clipboard -i > /dev/null)
        ;;
    *)
        echo "Bad mode: »$mode«"
        exit 1
        ;;
esac

case "$mode" in
    copy_stdin|copy_arguments)
        echo
        box "$(clipboard -o | wc --bytes | numfmt --to=iec-i --suffix=B) copied to clipboard"
        ;;
esac
