#!/usr/bin/env bash

echo "General syntax:"
echo "\\e[<style>;<foreground>;<background>m"

for style in 0 1 4; do
    echo
    echo -n "$style: "
    case $style in
        0) echo "normal" ;;
        1) echo "bold" ;;
        4) echo "underlined" ;;
        *) echo "bad \$style value"; exit 1 ;;
    esac
    for fg in $(seq 30 37); do
        for bg in $(seq 40 47); do
            echo -ne "\e[$style;$fg;$bg""m\\\e[$style;$fg;$bg""m\e[0m "
        done
        echo
    done
done
echo