#!/usr/bin/env bash

set -euo pipefail

text="$(xfce4-screenshooter --region --open cat | tesseract stdin stdout -l eng+deu)"

clipboard "$text"
echo "$text" > "$HOME/temp/screenshot-ocr_$(date --iso-8601=seconds).txt"
notify-send --urgency=critical "$(echo "$text" | wc -c | numfmt --to=iec-i --suffix=B) â†’ clipboard"
