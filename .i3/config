# Solarized
set $base1       #002b36
set $base2       #073642
set $base3       #586e75
set $base4       #657b83
set $base5       #839496
set $base6       #93a1a1
set $base7       #eee8d5
set $base8       #fdf6e3
set $yellow      #b58900
set $orange      #cb4b16
set $red         #dc322f
set $magenta     #d33682
set $violet      #6c71c4
set $blue        #268bd2
set $cyan        #2aa198
set $green       #859900
set $transparent #00000000

#                       Border      Background  Text      Indicator
client.focused          $blue       $blue       $base8    $blue
client.unfocused        $base1      $base1      $base8    $base1
client.focused_inactive $base1      $base1      $base8    $base1
client.urgent           $red        $red        $base1    $red
client.background       $red




set $mod Mod4
font pango:DejaVu Sans Mono 8

floating_modifier $mod
bindsym button3 floating toggle

# start a terminal
bindsym $mod+Backspace exec xfce4-terminal

bindsym $mod+delete kill

bindsym $mod+Return exec dmenu_run

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Ctrl+Shift+h move workspace to output left
bindsym $mod+Ctrl+Shift+l move workspace to output right

bindsym $mod+o split h
bindsym $mod+i split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+b layout stacking
bindsym $mod+n layout tabbed
bindsym $mod+m layout toggle split

bindsym $mod+z focus parent
bindsym $mod+u focus child


set $ws1 workspace "1:Music"
set $ws2 workspace "2:Browser"
set $ws3 workspace "3"
set $ws4 workspace "4"
set $ws5 workspace "5:Editor"
set $ws6 workspace "6"
set $ws7 workspace "7:IM"
set $ws8 workspace "8:IRC"
set $ws9 workspace "9:Mail"

assign [class="Firefox"] 2:Browser
assign [class="Atom"] 5:Editor

# switch to workspace
bindsym $mod+q $ws1
bindsym $mod+w $ws2
bindsym $mod+e $ws3
bindsym $mod+a $ws4
bindsym $mod+s $ws5
bindsym $mod+d $ws6
bindsym $mod+y $ws7
bindsym $mod+x $ws8
bindsym $mod+c $ws9

# move focused container to $ws
bindsym $mod+Shift+q move container to $ws1; $ws1
bindsym $mod+Shift+w move container to $ws2; $ws2
bindsym $mod+Shift+e move container to $ws3; $ws3
bindsym $mod+Shift+a move container to $ws4; $ws4
bindsym $mod+Shift+s move container to $ws5; $ws5
bindsym $mod+Shift+d move container to $ws6; $ws6
bindsym $mod+Shift+y move container to $ws7; $ws7
bindsym $mod+Shift+x move container to $ws8; $ws8
bindsym $mod+Shift+c move container to $ws9; $ws9

# reload the configuration file
bindsym $mod+Ctrl+C reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Ctrl+R restart
# exit i3 (logs you out of your X session)
bindsym $mod+Ctrl+E exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        bindsym l resize shrink width  10 px or 10 ppt
        bindsym h resize grow   width  10 px or 10 ppt
        bindsym k resize grow   height 10 px or 10 ppt
        bindsym j resize shrink height 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

exec --no-startup-id xfsettingsd --sm-client-disable
exec --no-startup-id xfce4-volumed
exec --no-startup-id xfce4-power-manager
exec --no-startup-id nm-applet

# exec --no-startup-id xfce4-session
exec --no-startup-id /usr/lib/x86_64-linux-gnu/xfce4/xfconf/xfconfd
exec --no-startup-id xfce4-panel

exec --no-startup-id firefox


bar {
    strip_workspace_numbers yes
    status_command i3status
    separator_symbol "|"
}
