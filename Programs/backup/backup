#!/usr/bin/env bash

set -euo pipefail

SCRIPT_DIR="$(dirname "$(readlink -f "$0")")"

source "$SCRIPT_DIR/credentials.source"
source "$SCRIPT_DIR/config.source"

function ensure_mount() {
    if [[ ! -d '/media/main/tng-backup/restic/backup-tng' ]]; then
        echo "Mount disk"
        udisksctl mount -b /dev/disk/by-id/usb-WD_Elements_10B8_57583531453934444C4D5430-0:0-part1
    fi
}

function write_backup() (
    set -x

    restic backup                                    \
        --exclude-file       "$SCRIPT_DIR/excludes"  \
        --iexclude-file      "$SCRIPT_DIR/iexcludes" \
        --host               "$RESTIC_HOSTNAME"      \
        --exclude-if-present ".nobackup"             \
        --with-atime                                 \
        --one-file-system                            \
        --compression max                            \
        --cleanup-cache                              \
        "$HOME"                                      \
        "$@"

    restic forget                 \
        --host "$RESTIC_HOSTNAME" \
        --keep-within-monthly 1y  \
        --keep-within-weekly 1m   \
        --keep-within-daily 7d    \
        --keep-within 1d
)

function copy_to_pi() {
    rclone sync --progress "/media/main/tng-backup/restic/backup-tng" pineapple-sftp:"/storage/logical-pipefish-2tb-hdd/restic/backup-tng"
}

ensure_mount
write_backup
copy_to_pi
