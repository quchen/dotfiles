#!/usr/bin/env bash

set -euo pipefail

dumpname="sync-packages"

echo "Writing package sync command to $dumpname"
echo "#!/usr/bin/env bash" > "$dumpname"
echo "" >> "$dumpname"
echo "# This file was auto-generated by »generate-install-script«." >> "$dumpname"
echo "" >> "$dumpname"

for package in $(apm list -bi); do
    echo "apm install $package" >> "$dumpname"
done
echo "" >> "$dumpname"
